                <a href="@Url.Action("Documents", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-file-earmark me-2"></i> Dokument
                </a>
                <a href="@Url.Action("Members", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-people me-2"></i> Medlemmar
                </a>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Filter</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="statusPending" checked>
                            <label class="form-check-label" for="statusPending">
                                Väntar
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="statusApproved" checked>
                            <label class="form-check-label" for="statusApproved">
                                Godkänd
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="statusRejected">
                            <label class="form-check-label" for="statusRejected">
                                Avvisad
                            </label>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Datum</label>
                        <select class="form-select">
                            <option selected>Alla datum</option>
                            <option>Senaste veckan</option>
                            <option>Senaste månaden</option>
                            <option>Senaste 3 månaderna</option>
                        </select>
                    </div>
                    
                    <button class="btn btn-primary w-100">Tillämpa filter</button>
                </div>
            </div>
        </div>
        

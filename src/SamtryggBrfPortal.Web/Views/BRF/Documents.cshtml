<div class="container mt-4">
    <h1 class="mb-4">Dokument</h1>
    
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="list-group">
                <a href="@Url.Action("Dashboard", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-speedometer2 me-2"></i> Dashboard
                </a>
                <a href="@Url.Action("Properties", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-house-door me-2"></i> Fastigheter
                </a>
                <a href="@Url.Action("Applications", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-file-earmark-text me-2"></i> Ansökningar
                </a>
                <a href="@Url.Action("Documents", "BRF")" class="list-group-item list-group-item-action active">
                    <i class="bi bi-file-earmark me-2"></i> Dokument
                </a>
                <a href="@Url.Action("Members", "BRF")" class="list-group-item list-group-item-action">
                    <i class="bi bi-people me-2"></i> Medlemmar
                </a>
            </div>
            
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="mb-0">Dokumentkategorier</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Alla dokument
                            <span class="badge bg-primary rounded-pill">12</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Årsredovisningar
                            <span class="badge bg-primary rounded-pill">3</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Stadgar
                            <span class="badge bg-primary rounded-pill">1</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Protokoll
                            <span class="badge bg-primary rounded-pill">5</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Policydokument
                            <span class="badge bg-primary rounded-pill">2</span>
                        </a>
                        <a href="#" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            Övrigt
                            <span class="badge bg-primary rounded-pill">1</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Alla dokument</h5>
                    <button class="btn btn-primary">
                        <i class="bi bi-upload me-1"></i> Ladda upp dokument
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Namn</th>
                                    <th>Kategori</th>
                                    <th>Uppladdad</th>
                                    <th>Storlek</th>
                                    <th>Åtgärder</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                        Årsredovisning 2024.pdf
                                    </td>
                                    <td>Årsredovisningar</td>
                                    <td>2025-03-04</td>
                                    <td>2.4 MB</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                        Årsredovisning 2023.pdf
                                    </td>
                                    <td>Årsredovisningar</td>
                                    <td>2024-03-10</td>
                                    <td>2.2 MB</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                        Årsredovisning 2022.pdf
                                    </td>
                                    <td>Årsredovisningar</td>
                                    <td>2023-03-15</td>
                                    <td>2.1 MB</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                        Stadgar 2022.pdf
                                    </td>
                                    <td>Stadgar</td>
                                    <td>2022-05-20</td>
                                    <td>1.5 MB</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <i class="bi bi-file-earmark-pdf text-danger me-2"></i>
                                        Protokoll årsstämma 2024.pdf
                                    </td>
                                    <td>Protokoll</td>
                                    <td>2024-05-15</td>
                                    <td>0.8 MB</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <button class="btn btn-outline-success">
                                                <i class="bi bi-download"></i>
                                            </button>
                                            <button class="btn btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center mt-4">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Föregående</a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#">Nästa</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Ladda upp nytt dokument</h5>
                </div>
                <div class="card-body">
                    <form>
                        <div class="mb-3">
                            <label for="documentTitle" class="form-label">Dokumenttitel</label>
                            <input type="text" class="form-control" id="documentTitle" placeholder="Ange dokumentets titel">
                        </div>
                        
                        <div class="mb-3">
                            <label for="documentCategory" class="form-label">Kategori</label>
                            <select class="form-select" id="documentCategory">
                                <option selected>Välj kategori</option>
                                <option>Årsredovisningar</option>
                                <option>Stadgar</option>
                                <option>Protokoll</option>
                                <option>Policydokument</option>
                                <option>Övrigt</option>
                            </select>
                        </div>
                        
                        <div class="mb-3">
                            <label for="documentDescription" class="form-label">Beskrivning (valfritt)</label>
                            <textarea class="form-control" id="documentDescription" rows="3" placeholder="Ange en kort beskrivning av dokumentet"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="documentFile" class="form-label">Fil</label>
                            <input class="form-control" type="file" id="documentFile">
                            <div class="form-text">Tillåtna filformat: PDF, DOC, DOCX, XLS, XLSX (max 10MB)</div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="documentPublic">
                            <label class="form-check-label" for="documentPublic">Gör dokumentet synligt för alla medlemmar</label>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="button" class="btn btn-secondary">Avbryt</button>
                            <button type="submit" class="btn btn-primary">Ladda upp</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

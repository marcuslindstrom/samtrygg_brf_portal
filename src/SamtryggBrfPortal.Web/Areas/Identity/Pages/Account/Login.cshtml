@page
@model LoginModel

@{
    ViewData["Title"] = "Logga in";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-3">@ViewData["Title"]</h1>
            <div class="card shadow">
                <div class="card-body p-3">
                    <form id="account" method="post" aria-labelledby="login-heading">
                        <h2 id="login-heading" class="sr-only">Inloggningsformulär</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.Email" class="form-label">E-postadress</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" aria-describedby="email-validation" />
                            <span asp-validation-for="Input.Email" class="text-danger" id="email-validation"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.Password" class="form-label">Lösenord</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" aria-describedby="password-validation" />
                            <span asp-validation-for="Input.Password" class="text-danger" id="password-validation"></span>
                        </div>
                        <div class="form-group mb-3">
                            <div class="form-check">
                                <input asp-for="Input.RememberMe" class="form-check-input" />
                                <label asp-for="Input.RememberMe" class="form-check-label">
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg" style="height: 40px;">Logga in</button>
                        </div>
                        <div class="form-group text-center">
                            <p class="mb-2">
                                <a asp-page="./ForgotPassword" class="text-primary">Glömt lösenordet?</a>
                            </p>
                            <p class="mb-0">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Registrera dig som ny användare</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

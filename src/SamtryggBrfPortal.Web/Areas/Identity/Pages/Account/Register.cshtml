@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center mb-3">@ViewData["Title"]</h1>
            <div class="card shadow">
                <div class="card-body p-3">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" aria-labelledby="register-heading">
                        <h2 id="register-heading" class="sr-only">Registreringsformulär</h2>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2" role="alert"></div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <label asp-for="Input.FirstName" class="form-label">Förnamn</label>
                                    <input asp-for="Input.FirstName" class="form-control" autocomplete="given-name" aria-required="true" aria-describedby="firstname-validation" />
                                    <span asp-validation-for="Input.FirstName" class="text-danger" id="firstname-validation"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-2">
                                    <label asp-for="Input.LastName" class="form-label">Efternamn</label>
                                    <input asp-for="Input.LastName" class="form-control" autocomplete="family-name" aria-required="true" aria-describedby="lastname-validation" />
                                    <span asp-validation-for="Input.LastName" class="text-danger" id="lastname-validation"></span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Email" class="form-label">E-postadress</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" aria-describedby="email-validation" />
                            <span asp-validation-for="Input.Email" class="text-danger" id="email-validation"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.Password" class="form-label">Lösenord</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" aria-describedby="password-validation" />
                            <span asp-validation-for="Input.Password" class="text-danger" id="password-validation"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Bekräfta lösenord</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" aria-describedby="confirmpassword-validation" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger" id="confirmpassword-validation"></span>
                        </div>
                        <div class="form-group d-grid mb-3">
                            <button id="registerSubmit" type="submit" class="btn btn-primary btn-lg" style="height: 40px;">Registrera</button>
                        </div>
                        <div class="form-group text-center">
                            <p class="mb-0">
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-primary">Har du redan ett konto? Logga in</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Glömt lösenord?";
}

<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1 class="text-center mb-3">@ViewData["Title"]</h1>
            <div class="card shadow">
                <div class="card-body p-3">
                    <p class="text-center mb-3">Ange din e-postadress. Vi skickar en länk för att återställa ditt lösenord.</p>
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                        <div class="form-group mb-2">
                            <label asp-for="Input.Email" class="form-label">E-post</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group d-grid mb-2">
                            <button type="submit" class="btn btn-primary btn-lg">Skicka</button>
                        </div>
                        <div class="form-group text-center">
                            <p class="mb-0">
                                <a asp-page="./Login" class="text-primary">Tillbaka till inloggning</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
